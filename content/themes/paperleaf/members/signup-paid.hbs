{{!< ../default}}

<main class="content">

    <article class="{{post_class}} p3 sm-p4 mx-auto bg-white box-shadow">

        <div class="post-content">

            {{#if @member.paid}}

                {{!-- Logged in, paying member: Redirect home --}}
                <script>window.location = '{{@site.url}}';</script>

            {{else if @member}}

                {{!-- Logged in, not paying: Check out --}}
                {{> member-plans}}

            {{else}}

                {{!-- Not logged in: Sign up --}}
                {{> member-signup}}

            {{/if}}

        </div>

    </article>

</main>
